.b-diff
    position: relative;
    user-select: none;

    img
        max-width: 100%;

    &__item
        position: absolute;
        top: 0; left: 0;
        backface-visibility: hidden;

        &:nth-child(1)
            z-index: 1;
        &:nth-child(2)
            z-index: 2;

    &__control
        position: absolute;
        z-index: 3;
        height: 100%;
        padding: 0 18px;

        &:hover
            cursor: col-resize;
        &:hover
            .b-diff__arrow_left
                transform: translate3d(-5px, 0, 0);
        &:hover
            .b-diff__arrow_right
                transform: translate3d(5px, 0, 0);
    &__line
        height: 100%;
        width: 4px;
        background: #f5f5f5;

    &__arrow
        position: absolute;
        top: 50%; width: 0;
        height: 0;
        transition: transform .3s ease;
        transform: translate3d(0px, 0, 0);

    &__arrow_left
        left: 0px;
        border-top: 10px solid transparent;
        border-bottom: 10px solid transparent;
        border-right:10px solid #f5f5f5;

    &__arrow_right
        right: 0px;
        border-top: 10px solid transparent;
        border-bottom: 10px solid transparent;
        border-left:10px solid #f5f5f5;

    &__title
        background: rgba(0, 0, 0, 0.7);
        color: #ffffff;
        font-size: 16px;
        line-height: 20px;
        position: absolute;
        padding: 5px 10px;
        z-index: 2;
        max-width: 45%;
        word-wrap: break-word;

    &__title_before
        right: 0;
        top: 0;

    &__title_after
        left: 0;
        top: 0;
